
import java.util.Iterator;
import java.util.Set;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;


public class Handle_popUp_Selenium {

public static void main(String[] args) throws InterruptedException{
	//http://www.popuptest.com/goodpopups.html	
	
	
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\Jim\\Downloads\\Automation\\ChromeDriver\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.get("http://www.popuptest.com/goodpopups.html");
		
		driver.findElement(By.xpath("/html/body/table[2]/tbody/tr/td/font/b/a[3]")).click();
		
		Set<String> handler = driver.getWindowHandles();
		
		Iterator<String> it = handler.iterator();
		
		String parentWindowId = it.next();
		System.out.println("parentWindow Id:" + parentWindowId);
		
		String childWindowId = it.next();
		System.out.println("childWindow Id:" + childWindowId);
		
		//Switch to pop up (child window)
		
		driver.switchTo().window(childWindowId);
		System.out.println("Child window title:" + driver.getTitle());
		//Code here to test elements on the pop up window
		System.out.println("Current URL is" + driver.getCurrentUrl());
		System.out.println("Child Class:" + driver.getClass());
		//Close the pop up window
		driver.close();
		
		//Switch back to the parent window
		driver.switchTo().window(parentWindowId);
		//put code here to continue testing in the parent window.
		System.out.println("Parent window title:" + driver.getTitle());
		System.out.println("Current URL is" + driver.getCurrentUrl());
		
		System.out.println("Parent Class:" + driver.getClass());
		
		Thread.sleep(3000);
		// Use Quit to close all windows parent and child
		driver.quit();
	}
	
}
